block content
  h1= title
  p Welcome to #{title}
  p this is assignment 10
  button(type="button" class="btn btn-secondary",onclick="doBump()") press me 
  div(id='bump') Bump count 

    script.  
      var count = 0
      var bump = 1
      function doBump() {
        count = count + bump 
        bump = bump + 1
        document.getElementById("bump").innerHTML = "Count "+ count +" Bump "+bump;
      }
